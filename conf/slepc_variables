include ${PETSC_DIR}/conf/variables

SLEPC_SYS_LIB_BASIC = -lslepcsys
SLEPC_MFN_LIB_BASIC = -lslepcmfn ${SLEPC_SYS_LIB_BASIC}
SLEPC_EPS_LIB_BASIC = -lslepceps ${SLEPC_SYS_LIB_BASIC}
SLEPC_SVD_LIB_BASIC = -lslepcsvd ${SLEPC_EPS_LIB_BASIC}
SLEPC_QEP_LIB_BASIC = -lslepcqep ${SLEPC_EPS_LIB_BASIC}
SLEPC_PEP_LIB_BASIC = -lslepcpep ${SLEPC_EPS_LIB_BASIC}
SLEPC_NEP_LIB_BASIC = -lslepcnep ${SLEPC_EPS_LIB_BASIC}
SLEPC_LIB_BASIC     = -lslepcnep -lslepcpep -lslepcqep -lslepcmfn ${SLEPC_SVD_LIB_BASIC}

SLEPC_LIB_DIR	    = ${SLEPC_DIR}/${PETSC_ARCH}/lib
SLEPC_INCLUDE       = -I${SLEPC_DIR} -I${SLEPC_DIR}/${PETSC_ARCH}/include -I${SLEPC_DIR}/include
CC_INCLUDES         = ${PETSC_INCLUDE} ${SLEPC_INCLUDE}
FC_INCLUDES         = ${PETSC_INCLUDE} ${SLEPC_INCLUDE}

SLEPC_CC_INCLUDES   = ${PRIMME_FLAGS}

SLEPC_EXTERNAL_LIB  = ${ARPACK_LIB} ${BLZPACK_LIB} ${TRLAN_LIB} ${PRIMME_LIB} ${BLOPEX_LIB} ${FEAST_LIB}

INSTALL_LIB_DIR	= ${SLEPC_LIB_DIR}
CCPPFLAGS	= ${PETSC_CCPPFLAGS} ${SLEPC_INCLUDE}
FCPPFLAGS	= ${PETSC_FCPPFLAGS} ${SLEPC_INCLUDE}

SLEPC_SYS_LIB   = ${CC_LINKER_SLFLAG}${SLEPC_LIB_DIR} -L${SLEPC_LIB_DIR} ${SLEPC_SYS_LIB_BASIC} ${SLEPC_EXTERNAL_LIB} ${PETSC_KSP_LIB}
SLEPC_MFN_LIB   = ${CC_LINKER_SLFLAG}${SLEPC_LIB_DIR} -L${SLEPC_LIB_DIR} ${SLEPC_MFN_LIB_BASIC} ${SLEPC_EXTERNAL_LIB} ${PETSC_KSP_LIB}
SLEPC_EPS_LIB   = ${CC_LINKER_SLFLAG}${SLEPC_LIB_DIR} -L${SLEPC_LIB_DIR} ${SLEPC_EPS_LIB_BASIC} ${SLEPC_EXTERNAL_LIB} ${PETSC_KSP_LIB}
SLEPC_SVD_LIB   = ${CC_LINKER_SLFLAG}${SLEPC_LIB_DIR} -L${SLEPC_LIB_DIR} ${SLEPC_SVD_LIB_BASIC} ${SLEPC_EXTERNAL_LIB} ${PETSC_KSP_LIB}
SLEPC_QEP_LIB   = ${CC_LINKER_SLFLAG}${SLEPC_LIB_DIR} -L${SLEPC_LIB_DIR} ${SLEPC_QEP_LIB_BASIC} ${SLEPC_EXTERNAL_LIB} ${PETSC_KSP_LIB}
SLEPC_PEP_LIB   = ${CC_LINKER_SLFLAG}${SLEPC_LIB_DIR} -L${SLEPC_LIB_DIR} ${SLEPC_PEP_LIB_BASIC} ${SLEPC_EXTERNAL_LIB} ${PETSC_KSP_LIB}
SLEPC_NEP_LIB   = ${CC_LINKER_SLFLAG}${SLEPC_LIB_DIR} -L${SLEPC_LIB_DIR} ${SLEPC_NEP_LIB_BASIC} ${SLEPC_EXTERNAL_LIB} ${PETSC_KSP_LIB}
SLEPC_LIB       = ${CC_LINKER_SLFLAG}${SLEPC_LIB_DIR} -L${SLEPC_LIB_DIR} ${SLEPC_LIB_BASIC} ${SLEPC_EXTERNAL_LIB} ${PETSC_KSP_LIB}

SHLIBS   = libslepcsys libslepcmfn libslepceps libslepcsvd libslepcqep libslepcpep libslepcnep
LIBNAME  = ${INSTALL_LIB_DIR}/${LIBBASE}.${AR_LIB_SUFFIX}

include ${SLEPC_DIR}/${PETSC_ARCH}/conf/slepcvariables
